{
  "name": "deps-ok",
  "description": "Fast checking of top level dependencies based on version numbers",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bin": "bin/deps-ok.js",
  "version": "0.0.0-development",
  "bugs": {
    "url": "https://github.com/bahmutov/deps-ok/issues"
  },
  "contributors": [
    "Tilman Potthof"
  ],
  "dependencies": {
    "check-types": "1.4.0",
    "lodash": "4.17.4",
    "optimist": "0.6.1",
    "q": "2.0.3",
    "quote": "0.4.0",
    "semver": "5.3.0"
  },
  "devDependencies": {
    "git-issues": "1.3.1",
    "github-post-release": "1.13.1",
    "grunt": "0.4.5",
    "grunt-contrib-jshint": "0.12.0",
    "grunt-nice-package": "0.10.4",
    "gt": "0.10.0",
    "jshint-summary": "0.4.0",
    "pre-git": "3.15.3",
    "semantic-release": "6.3.6",
    "simple-commit-message": "3.3.2"
  },
  "engines": {
    "node": ">= 0.8.0"
  },
  "homepage": "https://github.com/bahmutov/deps-ok",
  "keywords": [
    "npm",
    "install",
    "dependencies",
    "package",
    "version"
  ],
  "license": "MIT",
  "main": "index.js",
  "preferGlobal": true,
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/deps-ok.git"
  },
  "files": [
    "index.js",
    "src",
    "bin",
    "!src/test"
  ],
  "scripts": {
    "test": "npm run itself && npm run unit && npm run e2e",
    "itself": "node index.js",
    "unit": "gt src/test/**/*.coffee --output",
    "e2e": "gt test/*.coffee --output",
    "commit": "git-issues && commit-wizard",
    "issues": "git-issues",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm test"
      ],
      "pre-push": [
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "release": {
    "analyzeCommits": "simple-commit-message",
    "generateNotes": "github-post-release"
  }
}
